@using Microsoft.AspNetCore.Components.Server.ProtectedBrowserStorage

@inject ProtectedSessionStorage Session

<div class="top-row ps-3 navbar navbar-dark">
    <div class="container-fluid">
        <a class="navbar-brand" href="">CMS.DESKTOPUI</a>
        <button title="Navigation menu" class="navbar-toggler" @onclick="ToggleNavMenu">
            <span class="navbar-toggler-icon"></span>
        </button>
    </div>
</div>

<div class="@NavMenuCssClass" @onclick="ToggleNavMenu">
    <nav class="flex-column">
        @if (string.IsNullOrEmpty(userData.Value))
        {
            <div class="nav-item px-3">
                <NavLink class="nav-link" href="" Match="NavLinkMatch.All">
                    <span class="oi oi-home" aria-hidden="true"></span> Home
                </NavLink>
            </div>
            <div class="top-item px-3">
                <NavLink class="nav-link" href="account/register">
                    <span class="oi oi-account-login" aria-hidden="true"></span> Register
                </NavLink>
            </div>
            @*<div class="nav-item px-3">
                <NavLink class="nav-link" href="counter">
                    <span class="oi oi-plus" aria-hidden="true"></span> Counter
                </NavLink>
            </div>
            <div class="nav-item px-3">
                <NavLink class="nav-link" href="fetchdata">
                    <span class="oi oi-list-rich" aria-hidden="true"></span> Fetch data
                </NavLink>
            </div>*@
        }
        else{
            <div class="nav-item px-3">
                <NavLink class="nav-link" href="case/caselist">
                    <span class="oi oi-list-rich" aria-hidden="true"></span> Case
                </NavLink>
            </div>
            <div class="nav-item px-3">
                <NavLink class="nav-link" href="appointment/appointmentlist">
                    <span class="oi oi-book" aria-hidden="true"></span> Appointment
                </NavLink>
            </div>
            <div class="top-item px-3">
                <NavLink class="nav-link" href="account/login">
                    <span class="oi oi-account-logout" aria-hidden="true"></span>Logout
                </NavLink>
            </div>
        }
    </nav>
</div>

@code {

    private bool collapseNavMenu = true;

    ProtectedBrowserStorageResult<string> userData = new ProtectedBrowserStorageResult<string>();

    private string? NavMenuCssClass => collapseNavMenu ? "collapse" : null;

    private async void ToggleNavMenu()
    {
        collapseNavMenu = !collapseNavMenu;
        userData = await Session.GetAsync<string>("User");
    }
}
